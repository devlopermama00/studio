# MongoDB Connection String
# Make sure to include the database name in the URI, e.g., mongodb+srv://.../tourvista
MONGODB_URI="your_mongodb_connection_string"

# JSON Web Token Secret
# Generate a strong, random string, e.g., openssl rand -base64 32
JWT_SECRET="your_jwt_secret"

# Resend API Key for sending emails
RESEND_API_KEY="your_resend_api_key"

# Cloudinary credentials for file uploads
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME="your_cloudinary_cloud_name"
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET="your_cloudinary_upload_preset"

# The public URL of your application, used for generating links in emails.
# In development, this is typically http://localhost:9002
# In production, this should be your live domain, e.g., https://your-app-name.web.app
NEXT_PUBLIC_APP_URL="http://localhost:9002"

# Optional: Set this to your email to have your account automatically created as an admin on first registration.
ADMIN_EMAIL="admin@example.com"
